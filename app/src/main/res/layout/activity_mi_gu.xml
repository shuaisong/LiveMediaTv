<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/migu_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".module.vip.MiGuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:src="@drawable/migutop" />

        <LinearLayout
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_l"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="连续包月"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/l_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/m_price0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="￥0元"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>
            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_m"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="月 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/m_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>
            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_j"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="true"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="季 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/j_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_y"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:focusable="true"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="年 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/y_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/select_pay_way1" />

        <FrameLayout
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="50dp"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:padding="1.1dp"
                    app:tint="#FF344F"
                    android:src="@drawable/ic_triangle" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="方式一：话费支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
                <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/migu"/>

            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:focusable="true"
                android:orientation="vertical"
                app:isChecked="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="方式二：微信支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/weixin3"/>

            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="120dp"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="方式三：支付宝支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/alipay1"/>

            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
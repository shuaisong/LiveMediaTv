<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/migubg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".module.vip.MiGuActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2111C25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:src="@drawable/migutop" />

        <FrameLayout
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_m"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:focusable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="月 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/m_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_j"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="季 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/j_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout
                android:id="@+id/vip_y"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="60dp"
                android:focusable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="年 度 V I P"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/y_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="腾酷视频会员\n听书限时免费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </com.tangmu.app.TengKuTV.view.CheckableMiGuLinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/select_pay_way" />

        <FrameLayout
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="50dp"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="end"
                    android:padding="0.8dp"
                    android:src="@drawable/ic_triangle" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="方式一：话费支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:focusable="true"
                android:orientation="vertical"
                app:isChecked="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="方式二：微信支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>

            <com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout
                android:id="@+id/pay3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="120dp"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="25dp"
                    android:text="立即支付>>"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="方式三：支付宝支付"
                    android:textColor="@color/black_3_bg"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black_3_bg"
                    android:textSize="16sp" />
            </com.tangmu.app.TengKuTV.view.CheckableMiGuFrameLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.vip.VIPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="31dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/top_tv_bg"
                android:gravity="center_vertical"
                android:paddingStart="54dp"
                android:paddingEnd="12dp"
                android:text="@string/open_video_vip"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/head"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="29dp">

            <LinearLayout
                android:id="@+id/radio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="31dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout
                    android:id="@+id/vip_m"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    app:isChecked="true">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked1"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="93dp"
                                android:layout_marginStart="-1dp"
                                android:layout_marginEnd="-1dp"
                                android:layout_weight="1"
                                android:background="@mipmap/buy_vip_unchecked2"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked3"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="78dp"
                            android:paddingEnd="80dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="23dp"
                                android:text="@string/vip_m"
                                android:textColor="@color/white"
                                android:textSize="33sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/m_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="39元"
                                android:textColor="@color/white"
                                android:textSize="41sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </FrameLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:src="@mipmap/buy_indicator"
                        android:visibility="invisible" />
                </com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout>

                <com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout
                    android:id="@+id/vip_j"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:layout_marginTop="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked1"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="93dp"
                                android:layout_marginStart="-1dp"
                                android:layout_marginEnd="-1dp"
                                android:layout_weight="1"
                                android:background="@mipmap/buy_vip_unchecked2"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked3"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="78dp"
                            android:paddingEnd="80dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="23dp"
                                android:text="@string/vip_j"
                                android:textColor="@color/white"
                                android:textSize="33sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/j_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="39元"
                                android:textColor="@color/white"
                                android:textSize="41sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:src="@mipmap/buy_indicator"
                        android:visibility="invisible" />
                </com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout>

                <com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout
                    android:id="@+id/vip_y"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:layout_marginTop="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked1"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="93dp"
                                android:layout_marginStart="-1dp"
                                android:layout_marginEnd="-1dp"
                                android:layout_weight="1"
                                android:background="@mipmap/buy_vip_unchecked2"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:layout_width="97dp"
                                android:layout_height="93dp"
                                android:background="@mipmap/buy_vip_unchecked3"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="78dp"
                            android:paddingEnd="80dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="23dp"
                                android:text="@string/vip_y"
                                android:textColor="@color/white"
                                android:textSize="33sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/y_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="389元"
                                android:textColor="@color/white"
                                android:textSize="41sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:src="@mipmap/buy_indicator"
                        android:visibility="invisible" />
                </com.tangmu.app.TengKuTV.view.CheckableVipLinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="467dp"
                android:layout_marginEnd="94dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay_code"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="75dp"
                    android:gravity="center"
                    android:text="@string/pay_tip"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#1F2734"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/vip_hd"
            android:drawablePadding="11dp"
            android:gravity="center"
            android:text="@string/high_quality"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:drawableStart="@mipmap/vip_2"
            android:drawablePadding="11dp"
            android:gravity="center"
            android:text="@string/free_ad"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:drawableStart="@mipmap/vip_logo"
            android:drawablePadding="11dp"
            android:gravity="center"
            android:text="@string/honorable_status"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:drawableStart="@mipmap/vip_hd"
            android:drawablePadding="11dp"
            android:gravity="center"
            android:text="@string/free_movie"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/switchL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/top_tv_bg_select"
        android:focusable="false"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_switch" />

        <TextView
            android:id="@+id/tv_switchL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/top_tv_bg"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:paddingEnd="12dp"
            android:text="@string/switchL"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:focusable="true"
        android:src="@mipmap/theme_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/history"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/history_focus_select"
        android:focusable="true"
        android:padding="2dp"
        android:src="@mipmap/ic_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/top_tv_bg_select"
        android:focusable="true"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/history"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_top_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/top_tv_bg"
            android:gravity="center_vertical"
            android:paddingStart="46dp"
            android:paddingEnd="12dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mine"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/top_tv_bg_select"
        android:focusable="true"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/search"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@mipmap/default_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:paddingStart="46dp"
            android:paddingEnd="12dp"
            android:text="@string/mine"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/open_vip"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/top_tv_bg_select"
        android:drawableStart="@mipmap/ic_vip"
        android:drawablePadding="7dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:text="@string/open_vip"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/top_tv_bg_select"
        android:focusable="true"
        android:padding="@dimen/focus_width"
        android:src="@mipmap/ic_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:focusable="false"
        android:src="@mipmap/ic_wifi"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switchL"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:focusable="false"
        android:text="22:22"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wifi"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
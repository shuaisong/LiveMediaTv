<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".module.mine.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:background="@drawable/login_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@mipmap/default_head"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/login_tip"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/exprie_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#E4BF44"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/login_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bt_login_focus_sellect"
                    android:focusable="true"
                    android:gravity="center"
                    android:minWidth="60dp"
                    android:text="@string/login"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="29dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.7dp"
                        android:layout_weight="0.1"
                        android:background="#333E4C" />

                    <TextView
                        android:id="@+id/login_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="@string/exit_tip"
                        android:textColor="@color/white"
                        android:textSize="7sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.7dp"
                        android:layout_weight="0.1"
                        android:background="#333E4C" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="19.67dp"
                android:layout_weight="1"
                android:background="@drawable/vip_introl">

                <TextView
                    android:id="@+id/open_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/dp_10_view_bg_focused_select"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/open_video_vip"
                    android:textColor="#E4BF44"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1.67dp"
                    android:layout_height="match_parent"
                    android:background="#333E4C" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="42dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/vip_hd"
                        android:drawablePadding="7dp"
                        android:gravity="center"
                        android:text="@string/high_quality"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:drawableStart="@mipmap/vip_2"
                        android:drawablePadding="7dp"
                        android:gravity="center"
                        android:text="@string/free_ad"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:drawableStart="@mipmap/vip_logo"
                        android:drawablePadding="7dp"
                        android:gravity="center"
                        android:text="@string/honorable_status"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="30dp"
                        android:drawableStart="@mipmap/vip_1"
                        android:drawablePadding="7dp"
                        android:gravity="center"
                        android:text="@string/free_movie"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </GridLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/history"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/history4_bg"
                android:drawableTop="@mipmap/ic_history_white"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="38dp"
                android:text="@string/record_history"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="33dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/collect"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/history4_bg"
                    android:drawableTop="@mipmap/ic_collect"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:text="@string/collect"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/history4_bg"
                    android:drawableTop="@mipmap/ic_mine_setting"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:text="@string/setting"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_play_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="12dp"
            android:text="@string/playrecord"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="12dp"
            android:text="@string/collect"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/book_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dubbing_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


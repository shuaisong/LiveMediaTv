<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="609dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dp_15_cornner_gray_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:text="本 内 容 需 要 购 买 观 看"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/normal_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vip_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal_price"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.tangmu.app.TengKuTV.view.ShangshabanChangeTextSpaceView
                android:id="@+id/normal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:space="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vip_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_price"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.tangmu.app.TengKuTV.view.ShangshabanChangeTextSpaceView
                android:id="@+id/vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:space="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exprie_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/normal_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expre_time"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.tangmu.app.TengKuTV.view.ShangshabanChangeTextSpaceView
                android:id="@+id/exprie_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:space="3" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:background="#A29EA4" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pay_code"
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/pay_code_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="41dp"
            android:gravity="center"
            android:text="@string/pay_tip"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
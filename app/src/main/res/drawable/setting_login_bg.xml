    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#28323F" />
                    <size android:width="144dp" android:height="52dp" />
                </shape>
            </item>
            <item android:bottom="33dp" android:drawable="@mipmap/need_login" android:left="115dp" />
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#28323F" />
                    <size android:width="144dp" android:height="52dp" />
                    <stroke android:width="@dimen/focus_width" android:color="@color/focus_color" />
                </shape>
            </item>
            <item android:bottom="33dp" android:drawable="@mipmap/need_login" android:left="115dp" />
        </layer-list>
    </item>
</selector>

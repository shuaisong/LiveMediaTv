<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@mipmap/bg_1" />
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/focus_width" android:color="@color/focus_color" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:drawable="@mipmap/bg_1" android:state_focused="false" />

</selector>